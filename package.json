{
  "name": "thoughtmapper",
  "private": true,
  "version": "0.0.0",
  "main": "main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-start": "npm run build && electron .",
    "package": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.self.deon",
    "productName": "ThoughtMapper",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "!**/node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "win": {
      "target": "portable"
    },
    "asar": true,
    "asarUnpack": []
  },
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@mui/icons-material": "^5.15.17",
    "@mui/material": "^5.15.17",
    "d3-force": "^3.0.0",
    "d3-hierarchy": "^3.1.2",
    "d3-quadtree": "^3.0.1",
    "html-to-image": "^1.11.13",
    "immer": "^10.1.1",
    "nanoid": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-switch": "^7.0.0",
    "react-toastify": "^10.0.5",
    "reactflow": "^11.4.1",
    "zustand": "^4.2.0"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@vitejs/plugin-react": "^3.0.0",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "typescript": "^4.9.3",
    "vite": "^4.0.0"
  }
}
